<blueprint
        xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="
        http://www.osgi.org/xmlns/blueprint/v1.0.0
        https://osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd
">

    <reference id="vaultConfigService" interface="org.opennms.features.scv.vault.config.VaultService" availability="mandatory"/>

    <bean id="hcpVault" class="org.opennms.features.scv.vault.HcpCredentialsVault">
        <argument ref="vaultConfigService"/>
    </bean>

    <service ref="hcpVault" interface="org.opennms.features.scv.api.SecureCredentialsVault">
        <service-properties>
            <entry key="type" value="hcp-vault"/>
        </service-properties>
    </service>
</blueprint>
