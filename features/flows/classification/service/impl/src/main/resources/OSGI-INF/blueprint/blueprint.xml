<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.1.0"
           xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0
		http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd

		http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.1.0
		http://aries.apache.org/schemas/blueprint-cm/blueprint-cm-1.1.0.xsd">

    <cm:property-placeholder persistent-id="org.opennms.features.flows.classification"
                             update-strategy="reload">
        <cm:default-properties>
            <cm:property name="engine.reloadInterval" value="300"/>
        </cm:default-properties>
    </cm:property-placeholder>

    <reference id="classificationRuleDao" interface="org.opennms.netmgt.flows.classification.persistence.api.ClassificationRuleDao" availability="mandatory"/>
    <reference id="classificationGroupDao" interface="org.opennms.netmgt.flows.classification.persistence.api.ClassificationGroupDao" availability="mandatory"/>
    <reference id="filterDao" interface="org.opennms.netmgt.filter.api.FilterDao" availability="mandatory"/>
    <reference id="filterWatcher" interface="org.opennms.netmgt.dao.api.FilterWatcher" availability="mandatory"/>
    <reference id="sessionUtils" interface="org.opennms.netmgt.dao.api.SessionUtils" availability="mandatory"/>

    <reference id="reloadingClassificationEngine" interface="org.opennms.netmgt.flows.classification.ReloadingClassificationEngine" />

    <bean id="classificationService" class="org.opennms.netmgt.flows.classification.service.internal.DefaultClassificationService" destroy-method="close">
        <argument ref="classificationRuleDao"/>
        <argument ref="classificationGroupDao"/>
        <argument ref="filterDao"/>
        <argument ref="filterWatcher"/>
        <argument ref="sessionUtils"/>

        <property name="reloadInterval" value="${engine.reloadInterval}" />
    </bean>

    <service ref="classificationService" interface="org.opennms.netmgt.flows.classification.service.ClassificationService" />

    <bean id="classificationEngine" class="org.opennms.netmgt.flows.classification.service.internal.ListeningClassificationEngine" destroy-method="close">
        <argument ref="reloadingClassificationEngine" />
        <argument ref="classificationService" />
    </bean>

    <service ref="classificationEngine" interface="org.opennms.netmgt.flows.classification.ClassificationEngine" />

</blueprint>
