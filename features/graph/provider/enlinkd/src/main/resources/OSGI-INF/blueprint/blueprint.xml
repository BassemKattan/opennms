<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0
        https://osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd">

    <reference id="topologyEntityCache" interface="org.opennms.netmgt.enlinkd.persistence.api.TopologyEntityCache" availability="mandatory" />

    <bean id="enlinkdGraphContainerProvider" class="org.opennms.netmgt.graph.provider.enlinkd.EnlinkdGraphContainerProvider" init-method="init" destroy-method="destroy">
        <argument index="0" ref="topologyEntityCache"/>
    </bean>
    <service interface="org.opennms.netmgt.graph.api.service.GraphContainerProvider" ref="enlinkdGraphContainerProvider"/>

</blueprint>
