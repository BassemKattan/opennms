<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="
		http://www.osgi.org/xmlns/blueprint/v1.0.0
		https://osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd
">

    <reference id="tftpServer" interface="org.opennms.features.deviceconfig.tftp.TftpServer" />
    <reference id="sshScriptingService" interface="org.opennms.features.deviceconfig.sshscripting.SshScriptingService" />

    <bean id="deviceConfigRetriever" class="org.opennms.features.deviceconfig.retriever.impl.RetrieverImpl" destroy-method="close">
        <argument ref="sshScriptingService"/>
        <argument ref="tftpServer"/>
    </bean>
    <service ref="deviceConfigRetriever" interface="org.opennms.features.deviceconfig.retrieval.Retriever" />

</blueprint>