<datacollection-group xmlns="http://xmlns.opennms.org/xsd/config/datacollection" name="PostgreSQL-JDBC">
   <resourceType name="pgTableSpace" label="PostgreSQL Tablespace" resourceLabel="${spcname}">
      <persistenceSelectorStrategy class="org.opennms.netmgt.collectd.PersistAllSelectorStrategy"/>
      <storageStrategy class="org.opennms.netmgt.dao.support.IndexStorageStrategy"/>
   </resourceType>
   <resourceType name="pgDatabase" label="PostgreSQL Database" resourceLabel="${datname}">
      <persistenceSelectorStrategy class="org.opennms.netmgt.collectd.PersistAllSelectorStrategy"/>
      <storageStrategy class="org.opennms.netmgt.dao.support.IndexStorageStrategy"/>
   </resourceType>
</datacollection-group>